<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/yinying"
        android:padding="10dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blue"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/case_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离婚后财产纠纷"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:alpha="0.1"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="案    号："
                android:drawableLeft="@mipmap/list_26"
                android:drawablePadding="5dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/case_item_numb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017（民）第 0070 号"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:alpha="0.1"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="委托人："
                android:drawableLeft="@mipmap/list_26"
                android:drawablePadding="5dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/case_item_consignor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017（民）第 0070 号"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:alpha="0.1"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对方当事人："
                android:drawableLeft="@mipmap/list_26"
                android:drawablePadding="5dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/case_item_adversary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017（民）第 0070 号"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
