                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/input_bluedark_white"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="办案机关："
                        android:textColor="@color/white"
                        android:background="@color/bluedark"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/bananjiguan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="公安局"
                        android:textColor="@color/black" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/arraw" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/input_bluedark_white"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="侦查案号："
                        android:textColor="@color/white"
                        android:background="@color/bluedark"
                        android:padding="5dp"/>

                    <EditText
                        android:id="@+id/zhenchaanhao"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请填写侦查案号"
                        android:textColorHint="@color/transparent80"
                        android:textSize="12sp"
                        android:background="@null"
                        android:paddingLeft="5dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/input_bluedark_white"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="部        门："
                        android:textColor="@color/white"
                        android:background="@color/bluedark"
                        android:padding="5dp"/>

                    <EditText
                        android:id="@+id/bumeng"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请填写部门"
                        android:textColorHint="@color/transparent80"
                        android:textSize="12sp"
                        android:background="@null"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/input_bluedark_white"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="承包人："
                        android:textColor="@color/white"
                        android:background="@color/bluedark"
                        android:padding="5dp"/>

                    <EditText
                        android:id="@+id/chengbanren"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请填写承办人"
                        android:textColorHint="@color/transparent80"
                        android:textSize="12sp"
                        android:background="@null"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/input_bluedark_white"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="联系电话："
                        android:textColor="@color/white"
                        android:background="@color/bluedark"
                        android:padding="5dp"/>

                    <EditText
                        android:id="@+id/phone_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请填写联系电话"
                        android:textColorHint="@color/transparent80"
                        android:inputType="number"
                        android:textSize="12sp"
                        android:background="@null"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/input_bluedark_white"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="刑拘时间："
                        android:textColor="@color/white"
                        android:background="@color/bluedark"
                        android:padding="5dp"/>

                    <TextView
                        android:id="@+id/xingju_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="请选择刑拘时间"
                        android:textColor="@color/transparent80"
                        android:textSize="12sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/input_bluedark_white"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="逮捕时间："
                        android:textColor="@color/white"
                        android:background="@color/bluedark"
                        android:padding="5dp"/>

                    <TextView
                        android:id="@+id/daibu_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="请选择逮捕时间"
                        android:textColor="@color/transparent80"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/input_bluedark_white"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="侦查时间："
                        android:textColor="@color/white"
                        android:background="@color/bluedark"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/zhencha_start_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="起始时间"
                        android:textColor="@color/transparent80"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- -"
                        android:textColor="@color/transparent80"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/zhencha_finish_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="截止时间"
                        android:textColor="@color/transparent80"
                        android:textSize="12sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/input_bluedark_white"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="补充侦查："
                        android:textColor="@color/white"
                        android:background="@color/bluedark"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/buchong_start_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="起始时间"
                        android:textColor="@color/transparent80"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- -"
                        android:textColor="@color/transparent80"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/buchong_finish_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="截止时间"
                        android:textColor="@color/transparent80"
                        android:textSize="12sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/input_bluedark_white"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="二次补充："
                        android:textColor="@color/white"
                        android:background="@color/bluedark"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/two_buchong_start"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="起始时间"
                        android:textColor="@color/transparent80"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- -"
                        android:textColor="@color/transparent80"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/two_buchong_finish"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="截止时间"
                        android:textColor="@color/transparent80"
                        android:textSize="12sp"/>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.3"
                android:background="@color/black" />
