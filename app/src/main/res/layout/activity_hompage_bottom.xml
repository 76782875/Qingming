<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/homepage_btn"
        android:gravity="bottom"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/cyan">
        <RadioButton
            android:id="@+id/homepage"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="首页"
            android:textSize="12sp"
            android:drawableTop="@drawable/btn_news"
            android:drawablePadding="5dp"
            android:gravity="center_horizontal"/>
        <RadioButton
            android:id="@+id/work"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="办公"
            android:textSize="12sp"
            android:drawableTop="@drawable/btn_application"
            android:drawablePadding="5dp"
            android:gravity="center_horizontal"/>
        <RadioButton
            android:id="@+id/news"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="通讯录"
            android:textSize="12sp"
            android:drawableTop="@drawable/btn_phone"
            android:drawablePadding="5dp"
            android:gravity="center_horizontal"/>

        <RadioButton
            android:id="@+id/me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/btn_me"
            android:gravity="center_horizontal"
            android:text="我"
            android:textSize="12sp"/>
    </RadioGroup>

</LinearLayout>
